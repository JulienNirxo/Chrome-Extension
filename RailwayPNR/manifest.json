{
    "name": "PNR Status Checker",
    "version": "1.0",
    "description": "Check PNR status for Indian Railways",
    "manifest_version": 2,
    "permissions": ["activeTab", "https://indianrailwaysapi.p.rapidapi.com/index.php*"],
    "content_security_policy": "script-src 'self' https://indianrailwaysapi.p.rapidapi.com/ https://cdn.jsdelivr.net; object-src 'self'",
    "browser_action": {
      "default_popup": "popup.html"
    }
  }
  